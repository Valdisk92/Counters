<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.korostel.counters.AddCounterActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новый счетчик"
        android:id="@+id/tvIndications"
        android:textSize="@dimen/text_view_h1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название:"
                android:id="@+id/textView2"
                android:textSize="@dimen/text_view_h3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterName"
                android:textSize="@dimen/text_view_h3"
                android:hint="Счетчик №1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Число целых разрядов:"
                android:id="@+id/textView3"
                android:textSize="@dimen/text_view_h3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterIntBits"
                android:textSize="@dimen/text_view_h3"
                android:hint="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Показывать десятичные разряды:"
                android:id="@+id/textView4"
                android:textSize="@dimen/text_view_h3" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выкл"
                android:id="@+id/switchAddCounterShowDecBits"
                android:textSize="@dimen/text_view_h3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Число десятичных разрядов:"
                android:id="@+id/tvAddCounterDecBits"
                android:textSize="@dimen/text_view_h3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterFracBits"
                android:textSize="@dimen/text_view_h3"
                android:hint="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Еденицы измерения:"
                android:id="@+id/textView6"
                android:textSize="@dimen/text_view_h3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterUnitsMeasure"
                android:textSize="@dimen/text_view_h3"
                android:hint="куб.м, кВт" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тариф:"
                android:id="@+id/textView7"
                android:textSize="@dimen/text_view_h3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterRate"
                android:textSize="@dimen/text_view_h3"
                android:hint="25.05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Валюта:"
                android:id="@+id/textView8"
                android:textSize="@dimen/text_view_h3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterCurrency"
                android:textSize="@dimen/text_view_h3"
                android:hint="грн, евро, дол" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Начальное показание:"
                android:id="@+id/textView9"
                android:textSize="@dimen/text_view_h3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterStartValue"
                android:textSize="@dimen/text_view_h3"
                android:hint="..." />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
