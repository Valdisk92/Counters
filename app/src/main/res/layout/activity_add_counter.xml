<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.korostel.counters.AddCounterActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новый счетчик"
        android:id="@+id/tvIndications"
        android:textSize="@dimen/text_large" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название:"
                android:id="@+id/textView2"
                android:textSize="@dimen/text_medium"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterName"
                android:textSize="@dimen/text_medium"
                android:hint="Счетчик №1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Еденицы измерения:"
                android:id="@+id/textView6"
                android:textSize="@dimen/text_medium"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterUnitsMeasure"
                android:textSize="@dimen/text_medium"
                android:hint="куб.м, кВт" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тариф:"
                android:id="@+id/textView7"
                android:textSize="@dimen/text_medium"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterRate"
                android:textSize="@dimen/text_medium"
                android:hint="25.05"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Валюта:"
                android:id="@+id/textView8"
                android:textSize="@dimen/text_medium"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterCurrency"
                android:textSize="@dimen/text_medium"
                android:hint="грн, евро, дол" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Последнее значение:"
                android:id="@+id/textView9"
                android:textSize="@dimen/text_medium"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddCounterStartValue"
                android:textSize="@dimen/text_medium"
                android:hint="..." />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
