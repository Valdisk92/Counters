<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="com.korostel.counters.ChangeCounterActivity"
              android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    style="@style/TextViewTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Название:"
                    android:id="@+id/textView2"
                    android:paddingTop="@dimen/activity_vertical_margin"/>

            <EditText
                    style="@style/EditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etChangeCounterName"
                    android:hint="Название"/>

            <TextView
                    style="@style/TextViewTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Еденицы измерения:"
                    android:id="@+id/textView6"
                    android:paddingTop="@dimen/activity_vertical_margin"/>

            <EditText
                    style="@style/EditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etChangeCounterUnitsMeasure"
                    android:hint="куб.м, кВт" />

            <TextView
                    style="@style/TextViewTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тариф:"
                    android:id="@+id/textView7"
                    android:paddingTop="@dimen/activity_vertical_margin"/>

            <EditText
                    style="@style/EditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etChangeCounterRate"
                    android:inputType="numberDecimal"
                    android:hint="25.05"
                    android:paddingTop="@dimen/activity_vertical_margin"/>

            <TextView
                    style="@style/TextViewTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Валюта:"
                    android:id="@+id/textView8"
                    android:paddingTop="@dimen/activity_vertical_margin"/>

            <EditText
                    style="@style/EditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etChangeCounterCurrency"
                    android:hint="грн, евро, дол" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
