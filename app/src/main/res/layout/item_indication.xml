<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:id="@+id/tvIndicationItemMonth"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_view_h3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:id="@+id/tvIndicationItemYear"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_view_h4"
        android:layout_below="@+id/tvIndicationItemMonth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Indication"
        android:id="@+id/tvIndicationItemCurrIndValue"
        android:layout_alignBottom="@+id/tvIndicationItemMonth"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_view_h3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/tvIndicationItemPrice"
        android:layout_below="@+id/tvIndicationItemCurrIndValue"
        android:textSize="@dimen/text_view_h4"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/tvIndicationItemDate"
        android:layout_alignBottom="@+id/tvIndicationItemMonth"
        android:layout_toRightOf="@+id/tvIndicationItemMonth"
        android:layout_toEndOf="@+id/tvIndicationItemMonth"
        android:textSize="@dimen/text_view_h3"
        android:paddingLeft="@dimen/activity_horizontal_margin" />
</RelativeLayout>